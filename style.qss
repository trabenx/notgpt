/* Modern dark theme */
QMainWindow, QWidget {
    background-color: #252526;
    color: #d4d4d4;
    font-family: 'Segoe UI', Arial, sans-serif;
}

#sidebar {
    background-color: #333333;
    border-right: 1px solid #1e1e1e;
}

QListWidget {
    background-color: transparent;
    color: #d4d4d4;
    border: none;
    font-size: 14px;
    outline: none;
}

QListWidget::item {
    padding: 10px 15px;
    border-bottom: 1px solid #2d2d2d;
}

QListWidget::item:selected {
    background-color: #2a2d2e;
    border-left: 4px solid #4CAF50;
}

#chatArea {
    background-color: #1e1e1e;
}

#inputArea {
    background-color: #252526;
    border-top: 1px solid #3c3c3c;
    padding: 10px;
}

QLineEdit {
    background-color: #3c3c3c;
    color: #d4d4d4;
    border: 1px solid #3c3c3c;
    border-radius: 18px;
    padding: 8px 15px;
    font-size: 14px;
}

QLineEdit:focus {
    border: 1px solid #4CAF50;
}

QPushButton {
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 18px;
    padding: 8px 15px;
    min-width: 80px;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #66BB6A;
}

QPushButton:disabled {
    background-color: #3a3a3a !important;
    color: #7a7a7a !important;
    border: 1px solid #2a2a2a !important;
}


QScrollBar:vertical {
    border: none;
    background: #252526;
    width: 10px;
    margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical {
    background: #3c3c3c;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: none;
}

QLabel#timestamp {
    color: #858585;
    font-size: 11px;
    padding-top: 4px;
}

/* Image preview */
QLabel#imagePreview {
    border-radius: 8px;
    border: 1px solid #3c3c3c;
    background-color: #2d2d2d;
    margin-top: 5px;
}

/* Timestamp styling */
#timestamp {
    color: rgba(255, 255, 255, 0.7) !important;
    background: transparent;
    padding-top: 4px;
    margin-top: 4px;
}

/* Add spacing between messages */
#messagesContainer > MessageBubble {
    margin-bottom: 10px;
}

/* Message bubble styling */
MessageBubble {
    min-height: 40px;
    max-width: 80%;
}

MessageBubble[type="user"] {
    background-color: #0B57D0;
    border-radius: 18px;
    border-bottom-right-radius: 4px;
    padding: 12px 16px;
    margin-left: 20%;
    margin-right: 0;
    color: white;
}

MessageBubble[type="assistant"] {
    background-color: #333333;
    border-radius: 18px;
    border-bottom-left-radius: 4px;
    padding: 12px 16px;
    margin-left: 0;
    margin-right: 20%;
    color: white;
}

/* Ensure the text label expands properly */
MessageBubble QLabel {
    background-color: transparent;
    color: white;
    padding: 0;
    margin: 0;
    word-wrap: break-word;
    max-width: 600px; /* Increased max width */
}

/* Messages container */
#messagesContainer {
    width: 100%;
}

/* Scroll area */
QScrollArea {
    background-color: #1e1e1e;
}



/* Image button specific */
#imageButton:disabled {
    background-color: #3a3a3a;
    color: #7a7a7a;
}

/* Audio button specific */
#audioButton:disabled {
    background-color: #3a3a3a;
    color: #7a7a7a;
}

QToolTip {
    background-color: #2d2d2d;
    color: #d4d4d4;
    border: 1px solid #3c3c3c;
    padding: 5px;
    border-radius: 5px;
}

/* Image button */
#imageButton {
    background-color: #3a3a3a;
    border-radius: 50%;
    font-size: 18px;
}

#imageButton:hover:enabled {
    background-color: #4a4a4a;
}

#imageButton:pressed:enabled {
    background-color: #5a5a5a;
}

/* Audio button */
#audioButton {
    background-color: #3a3a3a;
    border-radius: 50%;
    font-size: 18px;
}

#audioButton:hover:enabled {
    background-color: #4a4a4a;
}

#audioButton:pressed:enabled {
    background-color: #5a5a5a;
}