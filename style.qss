/* Modern dark theme */
QMainWindow, QWidget {
    background-color: #252526;
    color: #d4d4d4;
    font-family: 'Segoe UI', Arial, sans-serif;
}

#sidebar {
    background-color: #333333;
    border-right: 1px solid #1e1e1e;
}

QListWidget {
    background-color: transparent;
    color: #d4d4d4;
    border: none;
    font-size: 14px;
    outline: none;
}

QListWidget::item {
    padding: 10px 15px;
    border-bottom: 1px solid #2d2d2d;
}

QListWidget::item:selected {
    background-color: #2a2d2e;
    border-left: 4px solid #4CAF50;
}

#chatArea {
    background-color: #1e1e1e;
}

#inputArea {
    background-color: #252526;
    border-top: 1px solid #3c3c3c;
    padding: 10px;
}

QLineEdit {
    background-color: #3c3c3c;
    color: #d4d4d4;
    border: 1px solid #3c3c3c;
    border-radius: 18px;
    padding: 8px 15px;
    font-size: 14px;
}

QLineEdit:focus {
    border: 1px solid #4CAF50;
}

QPushButton {
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 18px;
    padding: 8px 15px;
    min-width: 80px;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #66BB6A;
}

QScrollBar:vertical {
    border: none;
    background: #252526;
    width: 10px;
    margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical {
    background: #3c3c3c;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: none;
}

/* Message bubble styling */
MessageBubble[type="user"] {
    background-color: #0B57D0;
    border-radius: 18px;
    border-bottom-right-radius: 4px;
    padding: 12px 16px;
    color: white;
    margin-left: 20%;
    margin-right: 0;
}

MessageBubble[type="assistant"] {
    background-color: #333333;
    border-radius: 18px;
    border-bottom-left-radius: 4px;
    padding: 12px 16px;
    color: #d4d4d4;
    margin-left: 0;
    margin-right: 20%;
}
MessageBubble[type="assistant"] QLabel {
    color: white !important;
    background-color: transparent;
}


QLabel#timestamp {
    color: #858585;
    font-size: 11px;
    padding-top: 4px;
}

/* Image preview */
QLabel#imagePreview {
    border-radius: 8px;
    border: 1px solid #3c3c3c;
    background-color: #2d2d2d;
    margin-top: 5px;
}

/* Align user messages to right */
[type="user"] {
    margin-left: 20%;
    margin-right: 0;
}

/* Align assistant messages to left */
[type="assistant"] {
    margin-left: 0;
    margin-right: 20%;
}

/* Add these rules to your existing style.qss */


/* Ensure all elements inside message bubbles have transparent backgrounds */
MessageBubble QLabel {
    background-color: transparent;
    color: inherit;
}

/* Timestamp styling */
#timestamp {
    color: rgba(255, 255, 255, 0.7) !important;
    font-size: 11px;
    padding-top: 4px;
    background-color: transparent;
}